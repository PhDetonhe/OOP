public class Aviao {
        String tipo;
        String cor;
        int velocidade;
        int qntdAssentos;

        public String getTipo(){
            return tipo;
        }
        public void setTipo(String tipo){
            this.tipo = tipo;
        }

        public String getCor() {
            return cor;
        }
        public void setCor(String cor) {
            this.cor = cor;
        }

        public int getQntdAssentos() {
        return qntdAssentos;
        }
        public void setQntdAssentos(int qntdAssentos) {
        this.qntdAssentos = qntdAssentos;
        }

        public int getVelocidade() {
        return velocidade;
        }

        public void setVelocidade(int velocidade) {
        this.velocidade = velocidade;
        }
}

import java.util.Scanner;
public class objAviao {
    public static void main(String[] args) {
        Aviao objAviao = new Aviao();
        Scanner ler = new Scanner(System.in);



        for(int i = 0; i < 3; i++){
        System.out.println("Insira o tipo do avião:");
        String tipo = ler.nextLine();
        System.out.println("Insira a cor do avião:");
        String cor = ler.nextLine();
        System.out.println("velocidade do avião:");
        int velocidade = ler.nextInt();
        ler.nextLine();
        System.out.println("quantidade de assentos:");
        int qntdAssentos= ler.nextInt();

        objAviao.setTipo(tipo);
        ler.nextLine();
        objAviao.setCor(cor);
        objAviao.setVelocidade(velocidade);
        objAviao.setQntdAssentos(qntdAssentos);

        System.out.println("----------AVIÃO--------------");
        System.out.println("tipo: "+objAviao.getTipo());
        System.out.println("cor: "+ objAviao.getCor());
        System.out.println("velocidade: "+ objAviao.getVelocidade());
        System.out.println("quantidade de assentos: " + objAviao.getQntdAssentos());
        System.out.println("----------------------------");
        }

    }
}
